{
  "name": "notification-svc",
  "version": "1.0.0",
  "description": "Push notification microservice using Node.js, Express, and TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn src/server.ts",
    "build": "tsc",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "test": "jest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
